<!DOCTYPE html>
<html lang="en">

<head>  
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <header>
        <h1>Recent Posts</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/posts" class="active">posts</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </nav>
    </header>

    <header class="main-header">
    <h1>Campus Announcements</h1>
    <nav>
      <ul class="nav-links">
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/posts">Posts</a></li>
      </ul>
    </nav>
  </header>

  <main class="posts-container">
    <section class="intro">
      <h2>Share an Announcement</h2>
      <form action="/posts" method="POST" class="post-form">
        <input type="text" name="title" placeholder="Announcement title" required>
        <textarea name="content" rows="3" placeholder="Write your announcement..." required></textarea>
        <button type="submit" class="btn">Post</button>
      </form>
    </section>

    <section class="posts-grid">
         <% if (posts.length === 0) { %>
           <p>No announcements yet. Be the first to post!</p>
         <% } else { %>
          <% posts.forEach(post => { %>
              <article class="post-card">
                <div class="post-header">
                 <h3><%= post.title %></h3>
                 <p class="date"><%= post.date %></p>
               </div>
               <p><%= post.content %></p>
              </article>
          <% }) %>
         <% } %>
    </section>
    </main>

    <footer>
        <p>&copy; 2025 My Website. All rights reserved.</p>
    </footer>
</body>
</html>
